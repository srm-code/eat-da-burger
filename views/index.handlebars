{{!-- This is the main part of the body  --}}
<div class="container">
  <div class="jumbotron jumbotron-fluid rounded-0 px-5">
    <h1 class="text-center ">
      <img class="logo-img" src="/assets/images/burger.png" alt="hamburger">&nbsp;Greasy Burgers
    </h1>
    <div class="text-center">
      {{!-- Introduction --}}
      <p>
        Submit your order in the text box below. Click the 'Devour it" button to move it
        to the "Devoured" list.
      </p>
      <p>
        Technologies: jQuery, Bootstrap, CSS3, MySQL, Node, Express, MySQL
      </p>
      {{!-- Order input form --}}
      <form class="create-form">
        <span class="form-group">
          <label for="ca">Burger Name:</label>
          <input class="align-middle" type="text" id="ca" name="name" pattern="[\w]+[\w\s]*"
            title="only letters, numbers and spaces allowed">
          <button class="btn btn-success btn-sm align-middle" type="submit">Submit</button>
          <div id="error-msg" class="text-danger"></div>
        </span>
      </form>
    </div>
    <hr>
    {{!-- The "Order" and "Devoured" lists contents use the "burgers" partial to insert list items --}}
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-left">Orders</h2>
        <ul class="text-left list-unstyled mx-auto">
          {{#each burgers}}
          {{#unless eaten}}
          {{> burgers/burger-block newOrder=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      {{!-- "Devoured" list --}}
      <div class="col-md-6">
        <h2 class="text-left">Devoured</h2>
        <ul class="text-left list-unstyled">
          {{#each burgers}}
          {{#if eaten}}
          {{> burgers/burger-block newOrder=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div> <!-- row -->
  </div> <!-- jumbotron -->
</div> <!-- container -->