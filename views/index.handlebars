<div class="container">
  <h1>EAT-DA-BURGER</h1>

  <div class="row">
    <div class="col-md-6">

      <h2>Coming up!</h2>
      <ul>
        {{#each burgers}}
        {{#unless sleepy}}
        {{> burgers/burger-block sleep=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">

      <h2>Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if sleepy}}
        {{> burgers/burger-block sleep=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="sleepy">Sleepy?</label><br>
      <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
      <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>