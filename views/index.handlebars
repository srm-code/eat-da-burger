<div class="container">

  <div class="jumbotron">
    <h1 class="text-center "><img id="logo" src="/assets/images/burger.png" alt="hamburger">Welcome to Eat-Da-Burger!
    </h1>
    <hr>
    <div class="row">
      <div class="col-md-6">
        <h2 class="text-left">Burgers</h2>
        <ul>
          {{#each burgers}}
          {{#unless sleepy}}
          {{> burgers/burger-block sleep=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-md-6">
        <h2 class="text-left">Devoured!</h2>
        <ul>
          {{#each burgers}}
          {{#if sleepy}}
          {{> burgers/burger-block sleep=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div> <!-- row -->
    <hr>
    <h2>Add A Burger</h2>
    <form class="create-form">
      <span class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </span>
      &nbsp;
      <button class="btn btn-success" type="submit">Add Burger</button>
    </form>

  </div> <!-- jumbotron -->
</div> <!-- container -->